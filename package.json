{
    "name": "nfe-proxy-server",
    "version": "1.0.0",
    "description": "Proxy server para comunicação com SEFAZs brasileiras - ConfirmaPay",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "pm2:start": "pm2 start src/server.js --name nfe-proxy",
        "pm2:stop": "pm2 stop nfe-proxy",
        "pm2:restart": "pm2 restart nfe-proxy",
        "pm2:logs": "pm2 logs nfe-proxy"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "soap": "^1.0.0",
        "node-forge": "^1.3.1",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0",
        "express-rate-limit": "^7.1.5",
        "axios": "^1.6.2",
        "xml-crypto": "^3.2.0",
        "xmldom": "^0.6.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}